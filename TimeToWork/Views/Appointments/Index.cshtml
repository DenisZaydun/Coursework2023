@model PaginatedList<TimeToWork.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Записи</h1>

<p>
    <a asp-action="Create">Створити запис</a>
</p>


<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Пошук: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="OK" class="btn btn-default" /> |
            <a asp-action="Index">Скасувати</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">Дата</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ServiceSortParm"]">Послуга</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Клієнт</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ServiceProviderSortParm"]">Виконавець</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceParm"]">Ціна</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceProvider.FullName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Price)₴
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a> |
                <a asp-action="Done" asp-route-id="@item.AppointmentId">Done</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Назад
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Вперед
</a>
