@model TimeToWork.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати послугу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"></input>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="row" style="margin-top:10px">
                <label>Час виконання</label>
                <div class="form-group col-lg-6">
                    <label>Годин</label>
                    <input asp-for="ЕxecutionTimeHours" class="form-control" />
                    <span asp-validation-for="ЕxecutionTimeHours" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label>Хвилин</label>
                    <input asp-for="ЕxecutionTimeMinutes" class="form-control" />
                    <span asp-validation-for="ЕxecutionTimeMinutes" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
